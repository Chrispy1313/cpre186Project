package platformer1;
import java.awt.*;
import javax.swing.ImageIcon;
import javax.swing.JFrame;

public class screenTest extends JFrame{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
				DisplayMode display = new DisplayMode(1800, 600, 16, DisplayMode.REFRESH_RATE_UNKNOWN);
				screenTest plat= new screenTest();
				plat.run(display);
				screen platform = new screen();
				
				//platform.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //needs to be changed
				
			}
			
	private screen m;
	private Image bg;
	private Image pic;
	private boolean loaded;
			
		public void run(DisplayMode display){
			setBackground(Color.WHITE);
			setForeground(Color.CYAN);
			setFont(new Font("Times New Roman", Font.PLAIN, 36));
			
			loaded = false;
			m = new screen();
			try{
				m.makeFull(display, this);
				loadpics();
				try{
					Thread.sleep(10000);
				}catch(Exception e){}
					
			}finally{
				m.restoreScreen();
					
			}
		}
			
		public void loadpics(){
			bg = new ImageIcon("X:\\cpre186\\Chrysanthemum.jpg").getImage();
			pic = new ImageIcon("X:\\cpre186\\Desert.jpg").getImage();
			loaded = true;
			repaint();
			
		}
		
		public void paint(Graphics g){
				
			if (g instanceof Graphics2D)  {
				Graphics2D g2 = (Graphics2D)g;
				g2.setRenderingHint(RenderingHints.KEY_TEXT_ANTIALIASING, RenderingHints.VALUE_TEXT_ANTIALIAS_ON);
			}
			if(loaded){
				g.drawImage(bg, 200, 180, null);
				g.drawImage(pic, 200, 180, null);
			}
				
		}

	}
