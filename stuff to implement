//code for this
package tutorial;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.Timer;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class Stuff extends JPanel implements ActionListener {
	
	Timer time= new Timer(5, this); //5 milliseconds, action listener
	int x=0, velX=1, y=0,velY=0;

	public void paintComponent(Graphics g){
		
		super.paintComponent(g);
		g.setColor(Color.BLUE);
		g.fillRect(x, 20, 20, 30); //will use x and y later
		time.start();
		
	}
	
	public void actionPerformed(ActionEvent e){
		x=x+velX;
		y=y+velY;
		repaint();
	}
	
	
	public static void main(String[] args) {
		Stuff s= new Stuff();
		
		JFrame jf = new JFrame();
		jf.setTitle("Let's go!");
		jf.setSize(600,400);
		jf.setVisible(true);
		jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jf.add(s);
		
		
		
		
	}

}
