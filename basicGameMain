package platformer1;
import java.awt.*;
import javax.swing.JFrame;

public class platformerMain extends JFrame{

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		DisplayMode display = new DisplayMode(800, 600, 16, DisplayMode.REFRESH_RATE_UNKNOWN);
		platformerMain plat = new platformerMain();
		plat.run(display);
		screen platform = new screen();
		
		//platform.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //needs to be changed
		
	}
	
	public void run(DisplayMode display){
		setBackground(Color.WHITE);
		setForeground(Color.CYAN);
		setFont(new Font("Times New Roman", Font.PLAIN, 18));
		
		screen m = new screen();
		try{
			m.makeFull(display, this);
			try{
				Thread.sleep(10000);
			}catch(Exception e){}
			
		}finally{
			m.restoreScreen();
			
		}
	}
	
	public void paint(Graphics g){
		g.drawString("This is gonna be awesome", 200, 200);
	}

}
