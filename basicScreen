package platformer1;
	import java.awt.*;
	import javax.swing.JFrame;
	
public class screen extends JFrame{

	private GraphicsDevice card;
	
	public screen(){
		GraphicsEnvironment state = GraphicsEnvironment.getLocalGraphicsEnvironment();
		card = state.getDefaultScreenDevice();
		
	}
	
	public void makeFull(DisplayMode mode, JFrame window){	//sets the window to be fullscreen, undecorated, and non-resizable
		window.setUndecorated(true);
		window.setResizable(false);
		card.setFullScreenWindow(window);
		
		if(mode != null && card.isDisplayChangeSupported()){
			try{
				card.setDisplayMode(mode);
				
			}catch(Exception error){}
			
		}
	}
	
	public Window getFullWindow(){
		return card.getFullScreenWindow();
	}
	
	public void restoreScreen(){
		Window w = card.getFullScreenWindow();
		if(w != null){
			w.dispose();
		}
		card.setFullScreenWindow(null);
	}
	
	
	
}

